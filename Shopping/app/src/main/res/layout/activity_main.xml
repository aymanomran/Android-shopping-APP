<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a1.shopping.MainActivity">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#70e7e1"

        >
        <TextView
            android:textColor="#FFF"
            android:text="SHOPPING"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_margin="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="User Name" />

        <EditText
            android:id="@+id/usernameEtID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextstyle"
            android:inputType="number" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/passwordEtID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextstyle"
            android:inputType="numberPassword" />

    </LinearLayout>
<CheckBox
    android:id="@+id/remembermeChbxbtnID"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Remember Me"
    android:layout_gravity="center"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <Button
            android:id="@+id/loginbtnID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LogIn"
            android:onClick="loginFN"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />
        <Button
            android:id="@+id/signupbtnID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUP"
            android:onClick="signupFN"
            android:layout_margin="3dp"
           android:layout_weight="1"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/forgetpasswordtxtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#57e7cd"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Click Here IF You Forget Your Password"
        />
</LinearLayout>
