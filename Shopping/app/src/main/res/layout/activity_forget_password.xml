<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a1.shopping.ForgetPassword">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#70e7e1"

        >
        <TextView
            android:textColor="#FFF"
            android:text="SHOPPING"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="User Name" />

        <EditText
            android:id="@+id/usernameEtID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextstyle"
            android:inputType="number" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="What is your favorite hobby?" />

        <EditText
            android:id="@+id/mailEtID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextstyle"
            android:inputType="textEmailAddress" />
<TextView
    android:id="@+id/theuserpasswordtxtID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="28dp"
    android:textColor="#00ff00"
    />
    </LinearLayout>
<Button
    android:id="@+id/sendMailbtnId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Send"
    android:onClick="SendMail"
    />
</LinearLayout>

</LinearLayout>
